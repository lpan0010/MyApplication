DROP TABLE TABLE_PURCHASE CASCADE CONSTRAINTS;
DROP TABLE TABLE_ITEM CASCADE CONSTRAINTS;
DROP TABLE TABLE_TYPE CASCADE CONSTRAINTS;

DROP SEQUENCE purchase_id_seq;

CREATE TABLE TABLE_ITEM (
	ITEMID VARCHAR2() NOT NULL,
	ITEMCO2 NUMBER() NOT NULL,
	ITEMPRICE NUMBER() NOT NULL,
	ITEMNAME VARCHAR2() NOT NULL,
	ITEMTYPEID VARCHAR2() NOT NULL);
	ALTER TABLE TABLE_ITEM ADD CONSTRAINT ITEMID_PK PRIMARY KEY (ITEMID);

CREATE TABLE TABLE_PURCHASE (
	PURCHASEID VARCHAR2() NOT NULL, // SEQUENCE
	PURCHASETRIPID VARCHAR2() NOT NULL,
	PURCHASEITEMID VARCHAR2() NOT NULL,
	PURCHASEQUANTITY NUMBER() NOT NULL,
	PURCHASEDATE VARCHAR2() NOT NULL);
	ALTER TABLE TABLE_PURCHASE ADD CONSTRAINT PURCHASEID_PK PRIMARY KEY (PURCHASEID);

CREATE TABLE TABLE_TYPE (
	TYPEID VARCHAR2() NOT NULL,
	TYPENAME VARCHAR2() NOT NULL,
	TYPEMESSAGE VARCHAR() NOT NULL);
	ALTER TABLE TABLE_TYPE ADD CONSTRAINT TYPEID_PK PRIMARY KEY(TYPEID);

	ALTER TABLE TABLE_ITEM ADD CONSTRAINT ITEMTYPEID_SK FOREIGN KEY (TYPEID) REFERENCES TABLE_TYPE(TYPEID);
	ALTER TABLE TABLE_PURCHASE ADD CONSTRAINT PURCHASEITEMID_FK FOREIGN KEY (PURCHASEITEMID) REFERENCES TABLE_ITEM(ITEMTYPEID);


